{
    "include": ["src"],
    "compilerOptions": {
        "lib": ["DOM"],
        "baseUrl": "src",
        "moduleResolution": "node",
        "outDir": "lib",
        "target": "ESNext",
        "declaration": true,
        "declarationMap": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "alwaysStrict": true,
        "jsx": "react-jsx",
        "types": ["node", "react", "jest"]
    }
}
