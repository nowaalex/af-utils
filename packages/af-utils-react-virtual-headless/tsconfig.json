{
    "include": ["src"],
    "exclude": ["src/**/*.spec.ts", "src/**/*.test.ts"],
    "compilerOptions": {
        "lib": ["DOM"],
        "baseUrl": "src",
        "moduleResolution": "node",
        "outDir": "lib",
        "target": "ESNext",
        "declaration": true,
        "declarationMap": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "alwaysStrict": true
    }
}
