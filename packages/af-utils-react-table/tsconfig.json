{
    "include": ["src"],
    "exclude": ["src/**/*.spec.ts", "src/**/*.test.ts"],
    "compilerOptions": {
        "lib": ["DOM", "ESNext"],
        "baseUrl": "src",
        "jsx": "react-jsx",
        "moduleResolution": "node",
        "outDir": "lib",
        "target": "ESNext",
        "types": ["node"],
        "declaration": true,
        "declarationMap": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "alwaysStrict": true
    }
}
