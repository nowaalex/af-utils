{
    "name": "@af-utils/virtual-react",
    "private": false,
    "version": "0.0.27",
    "description": "React components and hooks for rendering large scrollable data",
    "repository": {
        "type": "git",
        "url": "https://github.com/nowaalex/af-utils.git",
        "directory": "packages/virtual/react"
    },
    "homepage": "https://af-utils.com/virtual",
    "bugs": "https://github.com/nowaalex/af-utils/issues",
    "author": {
        "name": "Alex Fomin",
        "email": "nowaalex@gmail.com",
        "url": "https://github.com/nowaalex/"
    },
    "license": "MIT",
    "sideEffects": false,
    "scripts": {
        "dev": "pnpm build:types && pnpm esbuild:dev",
        "build": "pnpm build:types && pnpm esbuild:build && pnpm api-extractor",
        "build:types": "tsc && tsc-alias",
        "esbuild:base": "esbuild ./src/index.ts --format=esm --outdir=lib --bundle --platform=neutral --external:react --external:react/jsx-runtime --external:@af-utils/*",
        "esbuild:build": "pnpm esbuild:base",
        "esbuild:dev": "pnpm esbuild:base --watch",
        "api-extractor": "api-extractor run && rm -r lib/types",
        "test": "jest"
    },
    "files": [
        "lib/*"
    ],
    "type": "module",
    "main": "lib/index.js",
    "types": "lib/index.d.ts",
    "exports": {
        "types": "./lib/index.d.ts",
        "node": "./lib/index.js",
        "default": "./lib/index.js"
    },
    "keywords": [
        "react",
        "reactjs",
        "virtual",
        "list",
        "dom-recycle",
        "dynamic-size",
        "scroll",
        "scrolling",
        "infinite",
        "virtualized",
        "virtual",
        "virtualization",
        "windowing"
    ],
    "devDependencies": {
        "esbuild": "^0.20.2",
        "typescript": "^5.4.5",
        "ts-jest": "^29.1.2"
    },
    "dependencies": {
        "@af-utils/virtual-core": "workspace:*"
    },
    "peerDependencies": {
        "react": "^17.0.0 || ^18.1.0"
    },
    "publishConfig": {
        "access": "public"
    }
}
