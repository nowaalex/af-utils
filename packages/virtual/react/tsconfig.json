{
    "include": ["src"],
    "compilerOptions": {
        "lib": ["DOM"],
        "baseUrl": "src",
        "rootDir": "src",
        "moduleResolution": "Bundler",
        "module": "ESNext",
        "outDir": "lib",
        "target": "ESNext",
        "declaration": true,
        "declarationMap": false,
        "declarationDir": "lib/types",
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "alwaysStrict": true,
        "resolveJsonModule": true,
        "jsx": "react-jsx",
        "types": ["node", "react", "jest"]
    }
}
