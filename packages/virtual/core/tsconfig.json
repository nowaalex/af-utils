{
    "include": ["src", "rollup.config.ts"],
    "compilerOptions": {
        "baseUrl": "src",
        "moduleResolution": "Bundler",
        "module": "ESNext",
        "outDir": "lib/",
        "target": "ESNext",
        "declaration": true,
        "declarationMap": false,
        "declarationDir": "lib/types",
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "alwaysStrict": true,
        "resolveJsonModule": true,
        "types": ["node", "jest"]
    }
}
