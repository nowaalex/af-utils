---
import Documentation from "layouts/Documentation.astro";
import { getEntry } from "astro:content";
import { getMenuMapForProjectExamples } from "utils/examples";
import type { Props as DocumentationLayoutProps } from "layouts/Documentation.astro";

export interface Props extends DocumentationLayoutProps {}

const { props } = Astro;

const items = [
    {
        name: "Description",
        path: "",
        children: [
            {
                name: "Getting started",
                path: "/virtual",
                exact: true
            },
            {
                name: "FAQ",
                path: "/virtual/faq"
            },
            {
                name: "Reference",
                path: `/virtual/reference/${(await getEntry("reference", "index")).id}`,
                comparePath: "/virtual/reference"
            },
            {
                name: "Bundle size impact",
                path: "/virtual/size"
            }
        ]
    },
    ...getMenuMapForProjectExamples("virtual")
];
---

<Documentation
    {...props}
    titleTemplate="%s | af-utils | Virtual"
    items={items}
    productName="virtual"
>
    <slot />
</Documentation>
