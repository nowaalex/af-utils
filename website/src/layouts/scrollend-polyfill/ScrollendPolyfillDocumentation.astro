---
import Documentation from "layouts/Documentation.astro";
import { getMenuMapForProjectExamples } from "utils/examples";
import defaultsDeep from "lodash/defaultsDeep";
import { getImage } from "astro:assets";
import ogScrollend from "assets/og/scrollend-polyfill.png";
export type { Props } from "layouts/Base.astro";

const items = [
    {
        name: "Description",
        path: "",
        children: [
            {
                name: "Getting started",
                path: "/scrollend-polyfill",
                exact: true
            },
            {
                name: "Bundle size impact",
                path: "/scrollend-polyfill/size"
            }
        ]
    },
    ...getMenuMapForProjectExamples("scrollend-polyfill")
];

const img = await getImage({ src: ogScrollend, quality: 20, format: "png" });

const props = defaultsDeep(Astro.props, {
    openGraph: {
        basic: {
            image: img.src
        }
    }
});
---

<Documentation
    {...props}
    titleTemplate="%s | af-utils | Scrollend-polyfill"
    items={items}
    productName="scrollend-polyfill"
>
    <slot />
</Documentation>
